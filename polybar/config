[colors]
background = ${xrdb:background:#000000}
foreground = ${xrdb:color4:#ffffff}
warn = ${xrdb:color1:#ff0000}

black = ${xrdb:color0:#000000}
gray = ${xrdb:color8:#cccccc}
white = ${xrdb:color7:#ffffff}
red = ${xrdb:color1:#ff0000}
green = ${xrdb:color2:#00ff00}
blue = ${xrdb:color4:#0000ff}
cyan = ${xrdb:color6:#00ffff}
yellow = ${xrdb:color3:#ffff00}
magenta = ${xrdb:color5:#ffff00}

[settings]
screenchange-reload = true

;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.background}
;format-overline = ${colors.green}
format-prefix-foreground = ${colors.gray}
;format-padding = 0
;format-spacing = 0
;format-margin = 0
;format-offset = 0

[bar/mybar]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
;offset-x = 0
;offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = ${colors.background}

border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 0
border-color = ${colors.cyan}

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 0

font-0 = xos4 Terminus:size=8;2
font-1 = NanumSquare:antialias=false:size=8;2

modules-left = transmission
modules-center = i3
modules-right = mpd volume cpu memory filesystem date xkeyboard
;modules-right = filesystem xbacklight xkeyboard memory cpu battery temperature date powermenu

tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = ${colors.background}

top = true

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

enable-ipc = true

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


;[module/demo]
;type = custom/ipc
;hook-0 = echo foobar
;hook-1 = date +%s
;hook-2 = whoami
;initial = 3
;click-left = polybar-msg -p %pid% hook demo 1
;click-right = polybar-msg -p %pid% hook demo 2
;double-click-left = polybar-msg -p %pid% hook demo 3

[module/transmission]
type = custom/script
exec = ~/bin/tr-bar

format = <label>
format-prefix =
label = %output%
interval = 60

[module/volume]
type = custom/ipc

format = <output>
format-prefix = "[vol] "
output = %output%

hook-0 = echo $(~/bin/volume)
initial = 1

click-left = ~/bin/volume -m 1 && polybar-msg -p %pid% hook volume 1
scroll-up = ~/bin/volume -m 4 && polybar-msg -p %pid% hook volume 1
scroll-down = ~/bin/volume -m 5 && polybar-msg -p %pid% hook volume 1

;[module/volume]
;type = internal/volume
;
;master-soundcard = default
;master-mixer = PCM
;speaker-mixer = PCM
;
;format-volume = <label-volume> <bar-volume>
;;label-volume = VOL
;;label-volume-foreground = ${root.foreground}
;
;;format-muted-prefix = ""
;;format-muted-foreground = ${colors.foreground}
;label-muted = muted

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %layout%

;label-indicator-padding = 1
;label-indicator-margin-left = 1
;label-indicator-foreground = ${colors.background}
;label-indicator-background = ${colors.blue}
;label-indicator-underline = ${colors.warn}

[module/filesystem]
type = internal/fs
interval = 60
spacing = 1

mount-0 = /
mount-1 = /home

label-mounted = [%mountpoint%] %percentage_used%%
label-unmounted =

;[module/bspwm]
;type = internal/bspwm
;
;label-focused = %index%
;label-focused-background = ${colors.background-alt}
;label-focused-underline= ${colors.blue}
;label-focused-padding = 1
;
;label-occupied = %index%
;label-occupied-padding = 1
;
;label-urgent = %index%!
;label-urgent-background = ${colors.warn}
;label-urgent-padding = 1
;
;label-empty = %index%
;label-empty-foreground = ${colors.foreground}
;label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

format-background = ${colors.background}

label-mode-padding = 0
label-mode-margin = 0
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}
label-mode-underline = ${colors.foreground}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 2
label-focused-margin = 0
label-focused-underline = ${colors.cyan}
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.black}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-margin = 0
label-unfocused-underline = ${colors.gray}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 2
label-visible-margin = 0
label-visible-underline = ${colors.gray}
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.background}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = 2
label-urgent-margin = 0
label-urgent-underline = ${colors.warn}
label-urgent-foreground = ${colors.warn}
label-urgent-background = ${colors.background}

[module/mpd]
type = internal/mpd

;format-online = <toggle> <icon-stop>
;format-offline = <label-offline>
format-playing = <label-song> <icon-prev> <icon-stop> <icon-pause> <icon-next>
format-stopped = [mpd] <icon-play>
format-paused = <label-song> <icon-play> <icon-stop>

icon-prev = <
icon-stop = []
icon-play = >
icon-pause = ||
icon-next = >

;bar-progress-width = 10
;bar-progress-indicator = |
;bar-progress-fill = |
;bar-progress-empty = |
;bar-progress-empty-foreground = ${colors.gray}

label-song = %artist% - %title%
label-song-maxlen = 10
label-song-ellipsis = true
label-offline =

;[module/xbacklight]
;type = internal/xbacklight
;
;format = <label> <bar>
;label = BL
;
;bar-width = 10
;bar-indicator = |
;bar-indicator-foreground = #ff
;bar-indicator-font = 2
;bar-fill = ─
;bar-fill-font = 2
;bar-fill-foreground = #9f78e1
;bar-empty = ─
;bar-empty-font = 2
;bar-empty-foreground = ${colors.foreground}
;
;[module/backlight-acpi]
;inherit = module/xbacklight
;type = internal/backlight
;card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 10

format = <label>
format-prefix = "[cpu] "
label = %percentage-cores%

;bar-load-width = 10
;bar-load-empty = |
;bar-load-fill = |
;bar-load-indicator = |

;bar-load-empty-foreground = ${colors.gray}
;bar-load-fill-foreground = ${colors.foreground}
;bar-load-indicator-foreground = ${colors.foreground}

;ramp-coreload-0 = ▁
;ramp-coreload-1 = ▂
;ramp-coreload-2 = ▃
;ramp-coreload-3 = ▄
;ramp-coreload-4 = ▅
;ramp-coreload-5 = ▆
;ramp-coreload-6 = ▇
;ramp-coreload-7 = █

;ramp-coreload-4-foreground = ${colors.warn}
;ramp-coreload-5-foreground = ${colors.warn}
;ramp-coreload-6-foreground = ${colors.warn}
;ramp-coreload-7-foreground = ${colors.warn}

[module/memory]
type = internal/memory
interval = 10
format = <label>
format-prefix = "[mem] "
label = %percentage_used%%

;bar-used-width = 10
;bar-used-indicator = |
;bar-used-foreground-0 = ${colors.foreground}
;bar-used-foreground-1 = ${colors.foreground}
;bar-used-foreground-2 = ${colors.red}
;bar-used-foreground-3 = ${colors.red}
;bar-used-fill = |
;bar-used-empty = |
;bar-used-empty-foreground = ${colors.gray}

;[module/wlan]
;type = internal/network
;interface =
;interval = 3.0
;
;format-connected = <ramp-signal> <label-connected>
;format-connected-underline = ${colors.blue}
;label-connected = %essid%
;
;format-disconnected =
;;format-disconnected = <label-disconnected>
;;format-disconnected-underline = ${self.format-connected-underline}
;;label-disconnected = %ifname% disconnected
;;label-disconnected-foreground = ${colors.foreground}
;
;ramp-signal-0 = 
;ramp-signal-1 = 
;ramp-signal-2 = 
;ramp-signal-3 = 
;ramp-signal-4 = 
;ramp-signal-foreground = ${colors.foreground}
;
;[module/eth]
;type = internal/network
;interface =
;interval = 3.0
;
;format-connected-underline = #55aa55
;format-connected-prefix = " "
;format-connected-prefix-foreground = ${colors.foreground}
;label-connected = %local_ip%
;
;format-disconnected =
;;format-disconnected = <label-disconnected>
;;format-disconnected-underline = ${self.format-connected-underline}
;;label-disconnected = %ifname% disconnected
;;label-disconnected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = %a %m/%d
;date-alt = %Y-%m-%d
time = %H:%M
;time-alt = %H:%M:%S

;format-prefix =
;format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.blue}
label = %date% %time%

;[module/battery]
;type = internal/battery
;battery = BAT0
;adapter = ADP1
;full-at = 98
;
;format-charging = <animation-charging> <label-charging>
;format-charging-underline = #ffb52a
;
;format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${self.format-charging-underline}
;
;format-full-prefix = " "
;format-full-prefix-foreground = ${colors.foreground}
;format-full-underline = ${self.format-charging-underline}
;
;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-foreground = ${colors.foreground}
;
;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-foreground = ${colors.foreground}
;animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0

format = <label>
format-prefix = temp:
label = %temperature%

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = #
label-open-foreground = ${colors.warn}
label-close = #
label-close-foreground = ${colors.warn}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[global/wm]
margin-top = 0
margin-bottom = 0
