[colors]
background = ${xrdb:background:#000000}
foreground = ${xrdb:color1:#ffffff}

transparent = #00000FF
black = ${xrdb:color0:#000000}
gray = ${xrdb:color8:#cccccc}
white = ${xrdb:color7:#ffffff}
red = ${xrdb:color1:#ff0000}
green = ${xrdb:color2:#00ff00}
blue = ${xrdb:color4:#0000ff}
yellow = ${xrdb:color3:#ffff00}

[settings]
screenchange-reload = true

;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.background}
format-padding = 1
format-prefix-foreground = ${colors.gray}
format-overline = ${colors.green}
;format-spacing = 0
;format-margin =
;format-offset =

[bar/mybar]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
;offset-x = 0
;offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 0
;line-color = ${colors.red}

border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 0

font-0 = xos4 Terminus:pixelsize=12;2
font-1 = NanumSquare:antialias=false:pixelsize=8;2
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=8:antialias=true;2

modules-left = transmission
modules-center = i3
modules-right = mpd volume filesystem cpu memory date xkeyboard
;modules-right = filesystem xbacklight xkeyboard memory cpu battery temperature date powermenu

tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = ${colors.background}

top = true

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

enable-ipc = true

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


;[module/demo]
;type = custom/ipc
;hook-0 = echo foobar
;hook-1 = date +%s
;hook-2 = whoami
;initial = 3
;click-left = polybar-msg -p %pid% hook demo 1
;click-right = polybar-msg -p %pid% hook demo 2
;double-click-left = polybar-msg -p %pid% hook demo 3

[module/transmission]
type = custom/script
exec = ~/bin/tr-bar

format = <label>
format-prefix = " "
label = %output%
interval = 60

[module/volume]
type = custom/ipc

format = <output>
format-prefix = "vol:"
output = %output%

hook-0 = echo $(~/bin/volume)
initial = 1

click-left = ~/bin/volume 1 && polybar-msg -p %pid% hook volume 1
scroll-up = ~/bin/volume 4 && polybar-msg -p %pid% hook volume 1
scroll-down = ~/bin/volume 5 && polybar-msg -p %pid% hook volume 1

;[module/volume]
;type = custom/script
;
;format = <label>
;format-prefix = "vol "
;format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.blue}
;
;label = %output%
;exec = ~/bin/volume
;interval = 60
;
;click-left = ~/bin/volume 1
;scroll-up = ~/bin/volume 4
;scroll-down = ~/bin/volume 5

;[module/volume]
;type = internal/volume
;
;master-mixer = PCM
;speaker-mixer = PCM
;
;format-volume = <label-volume> <bar-volume>
;;label-volume = VOL
;;label-volume-foreground = ${root.foreground}
;
;;format-muted-prefix = ""
;;format-muted-foreground = ${colors.foreground}
;label-muted = muted
;
;bar-volume-width = 10
;bar-volume-foreground-0 = #55aa55
;bar-volume-foreground-1 = #55aa55
;bar-volume-foreground-2 = #55aa55
;bar-volume-foreground-3 = #55aa55
;bar-volume-foreground-4 = #55aa55
;bar-volume-foreground-5 = #f5a70a
;bar-volume-foreground-6 = #ff5555
;bar-volume-gradient = false
;bar-volume-indicator = |
;bar-volume-indicator-font = 2
;bar-volume-fill = ─
;bar-volume-fill-font = 2
;bar-volume-empty = ─
;bar-volume-empty-font = 2
;bar-volume-empty-foreground = ${colors.foreground}

;[module/xwindow]
;type = internal/xwindow
;label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%

;label-indicator-padding = 1
label-indicator-margin-left = 1
;label-indicator-foreground = ${colors.background}
;label-indicator-background = ${colors.blue}
;label-indicator-underline = ${colors.red}

[module/filesystem]
type = internal/fs
interval = 60
spacing = 1

mount-0 = /
mount-1 = /home

label-mounted = %mountpoint%:%percentage_used%%
label-unmounted = %mountpoint% not mounted

;[module/bspwm]
;type = internal/bspwm
;
;label-focused = %index%
;label-focused-background = ${colors.background-alt}
;label-focused-underline= ${colors.blue}
;label-focused-padding = 1
;
;label-occupied = %index%
;label-occupied-padding = 1
;
;label-urgent = %index%!
;label-urgent-background = ${colors.red}
;label-urgent-padding = 1
;
;label-empty = %index%
;label-empty-foreground = ${colors.foreground}
;label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

format-background = ${colors.background}

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.red}
;label-mode-underline = ${colors.red}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 2
;label-focused-underline = ${colors.red}
label-focused-foreground = ${colors.black}
label-focused-background = ${colors.red}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
;label-unfocused-underline = ${colors.gray}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 2
;label-visible-underline = ${colors.gray}
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.background}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = 2
label-urgent-underline = ${colors.red}
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.background}

[module/mpd]
type = internal/mpd

;format-online = <toggle> <bar-progress>
format-offline = <label-offline>
format-playing = <label-song> <icon-prev> <icon-stop> <icon-pause> <icon-next> <bar-progress>
format-stopped = <icon-play> mpd offline
format-paused = <label-song> <icon-play> <icon-stop> <bar-progress>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

bar-progress-width = 5
bar-progress-indicator = |
bar-progress-fill = -
bar-progress-empty = -

;label-song =
label-song = %artist% - %title%
label-song-maxlen = 20
label-song-ellipsis = true
label-offline = "mpd offline"

